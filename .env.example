# Server Configuration
PORT=8080
GIN_MODE=debug

# Database URLs
MONGODB_URL=mongodb://admin:password@localhost:27017/songshare?authSource=admin
VALKEY_URL=valkey://:valkey123@localhost:6379

# MongoDB Credentials (for Docker Compose)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password

# Valkey Configuration
VALKEY_PASSWORD=valkey123

# Legacy Platform API Credentials (still supported for backward compatibility)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

APPLE_MUSIC_KEY_ID=your_key_id
APPLE_MUSIC_TEAM_ID=your_team_id
APPLE_MUSIC_KEY_FILE=path/to/AuthKey_KEYID.p8

# New Standardized Platform Configuration
# Format: PLATFORM_<PLATFORM_NAME>_<CONFIG_KEY>=value

# YouTube Music Example (API Key authentication)
PLATFORM_YOUTUBE_MUSIC_ENABLED=true
PLATFORM_YOUTUBE_MUSIC_AUTH_METHOD=api_key
PLATFORM_YOUTUBE_MUSIC_API_KEY=your_youtube_api_key
PLATFORM_YOUTUBE_MUSIC_BASE_URL=https://www.googleapis.com/youtube/v3
PLATFORM_YOUTUBE_MUSIC_RATE_LIMIT=100
PLATFORM_YOUTUBE_MUSIC_TIMEOUT=10

# Deezer Example (OAuth2 authentication)
PLATFORM_DEEZER_ENABLED=true
PLATFORM_DEEZER_AUTH_METHOD=oauth2
PLATFORM_DEEZER_CLIENT_ID=your_deezer_client_id
PLATFORM_DEEZER_CLIENT_SECRET=your_deezer_client_secret
PLATFORM_DEEZER_TOKEN_URL=https://auth.deezer.com/oauth/access_token.php
PLATFORM_DEEZER_BASE_URL=https://api.deezer.com
PLATFORM_DEEZER_RATE_LIMIT=50

# Tidal Example (Basic Auth)
PLATFORM_TIDAL_ENABLED=false
PLATFORM_TIDAL_AUTH_METHOD=basic_auth
PLATFORM_TIDAL_USERNAME=your_tidal_username
PLATFORM_TIDAL_PASSWORD=your_tidal_password
PLATFORM_TIDAL_BASE_URL=https://api.tidalhifi.com/v1
PLATFORM_TIDAL_RATE_LIMIT=30

# SoundCloud Example (API Key with secret)
PLATFORM_SOUNDCLOUD_ENABLED=false
PLATFORM_SOUNDCLOUD_AUTH_METHOD=api_key
PLATFORM_SOUNDCLOUD_API_KEY=your_soundcloud_client_id
PLATFORM_SOUNDCLOUD_API_SECRET=your_soundcloud_client_secret
PLATFORM_SOUNDCLOUD_BASE_URL=https://api.soundcloud.com